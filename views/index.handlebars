<h1>Burgers!</h1>

<h2>Available Burgers</h2>

<ul>
    {{#each Burgers}}
        {{#unless devoured}}
            {{> Burgers/burger-block devoured=true}}
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers eaten</h2>

<ul>
    {{#each Burgers}}
        {{#if devoured}}
            {{> Burgers/burger-block devoured=false}}
        {{/if}}
    {{/each}}
</ul>

<div class="form-group">
    <label for="br">Burger Name:</label>
    <input type="text" id="br" name="name"> 
</div>

<div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Available
</div>

<button type="submit">Order Burger</button>
